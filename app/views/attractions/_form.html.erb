<%= form_for(@attraction) do |f| %>
  <% if @attraction.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this attraction from being saved:</h2>

      <ul>
      <% @attraction.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :min_height, "Minimum height (in inches)" %><br>
    <%= f.number_field :min_height %><br>
    <%= f.label :happiness_rating, "How happy will this make someone? (1-5 scale)" %><br>
    <%= f.number_field :happiness_rating %><br>
    <%= f.label :nausea_rating, "How nauseous will this make someone? (1-5 scale)" %><br>
    <%= f.number_field :nausea_rating %><br>
    <%= f.label :tickets, "How many tickets will this cost?" %><br>
    <%= f.number_field :tickets %><br> 
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>